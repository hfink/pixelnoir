    vec4 color;
};

vec4 eval_material(void)
{
    
    //Need this dummy variable, or else the program is unable to link 
    //(at least on ATI cards).
    vec3 dummy;
    vec3 dummy2;
    eval_light(0, vec3(0, 0, 0), dummy, dummy2);

    int dummy3 = light_count;

    return color;
}
